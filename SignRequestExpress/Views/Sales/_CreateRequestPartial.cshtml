@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@model SignRequestExpress.Models.PostModels.SignRequestModel
@{
}

<!--TODO: Add Question Marks for user questions-->



<form asp-controller="Sales" asp-action="SubmitRequest" method="post" novalidate>
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-row">
        <div class="col-lg-5">
            <label asp-for="AccountName" class="formLabel"></label>
            <i class="fas fa-plus-square form-inline"></i>
            <select asp-for="AccountName" class="form-control">
                <option selected disabled>Select Account</option>
                <!--TODO: Add Iconic too create Addition button for a new account -->
                @if (ViewBag.AccountList != null)
                {
                    foreach (var item in ViewBag.AccountList)
                    {
                        <option>@item.ToString()</option>
                    }
                }
            </select>
            
        </div>
        <div class="col-md">
            <label asp-for="NeededDate" class="formLabel"></label>
            <input asp-for="NeededDate" class="form-control" />
            <span asp-validation-for="NeededDate" class="text-danger"></span>
        </div>
        <div class="col-md">
            <label for="dateRequestedStatic" class="formLabel">Date Requested:</label>
            <input type="text" readonly class="form-control" id="dateRequestedStatic"
                   value="@DateTime.Now.ToShortDateString()" />
        </div>        
    </div>    

    <div class="form-row">
        <div class="col-md">
            <label asp-for="Reason" class="formLabel"></label>
            <input asp-for="Reason" type="text" class="form-control" placeholder="Reason" />
        </div> 
        <div class="col-md">
            <label asp-for="MediaString" class="formLabel"></label>
            <select asp-for="MediaString" class="custom-select form-control">
                <!--TODO: Store on client device - would sqlite work?-->
                <option selected disabled>Media Type</option>
                <option>Adhesive</option>
                <!--TODO: Option appears if selected for Corr-Plast -- jQeury, Angular?-->
                <option>Photo Glossy</option>
                <option>Matte Outdoor</option>
                <option>Plasticore</option>
                <!--TODO: Option appears if selected for Lighted -- accomplished with jQuery? Angular-->
            </select>
        </div>
    </div>

    <div class="form-row">
        <!--TODO: Figure out how to disable form elements based off other's selection-->
        <!--TODO: Fix height/width from byte that way fractional dimensions can be accepted-->
        <div class="col-sm-2">
            <label asp-for="Quantity" class="formLabel"></label>
            <input asp-for="Quantity" class="form-control" type="number" value="1" min="0" max="100" />
        </div>
        <div class="col-sm-4">
            <label asp-for="HeightInch" class="formLabel"></label>
            <input asp-for="HeightInch" class="form-control" id="heightInput" type="number" placeholder="Height" step="0.05" min="0.25" max="500" />
        </div>
        <div class="col-sm-4">
            <label asp-for="WidthInch" class="formLabel"></label>
            <input asp-for="WidthInch" class="form-control" id="heightInput" type="number" placeholder="Width" step="0.05" min="0.25" max="500" />
        </div>
        <div class="col-md">
            <!--TODO: orientation auto switch-->
            <label for="signOrientation" class="formLabel orientation-label">Orientation: <i class="fas fa-sync" id="orientationSwap"></i></label>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="signOrientation" id="horizontalCheckbox" value="horizontal" />
                <label class="form-check-label" for="horizontalCheckbox"><i class="fas fa-arrows-alt-h"></i></label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="signOrientation" id="verticalCheckbox" value="vertical" />
                <label class="form-check-label" for="verticalCheckbox"><i class="fas fa-arrows-alt-v"></i></label>
            </div>
        </div>
    </div>

    <div class="form-row">
        <div class="col-lg-6">
            <label for="templateBrand" class="formLabel">Brand:</label>
            <select class="custom-select form-control form-inline" id="templateBrand" name="brandSelect">
                <option value="" selected disabled>Select Brand</option>
                @if (ViewBag.BrandList != null)
                {
                    foreach (var item in ViewBag.BrandList)
                    {
                        <option value="@item.ToString()">@item.ToString()</option>
                    }
                }
            </select>
        </div>
        <div class="col-md">
            <label asp-for="Template" class="formLabel"></label>
            <div class="input-group">
                <div class="input-group-prepend">
                    <button type="button" id="templateBtn" class="btn btn-secondary" data-toggle="modal"
                            data-target="#templateModal" disabled>
                        Choose Template
                    </button>
                </div>                
                <input type="text" readonly class="form-control" id="staticTemplate" placeholder="Selected Template"
                       aria-label="" aria-describedby="basic-addon1"/>
            </div>

            <!--May need to change role for the form purpose - returning a select?-->
            <div class="modal fade" id="templateModal" tabindex="-1" role="dialog" aria-labelledby="templateModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="templateModalLabel">Select a Template</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body"> <!--TODO: This is where the Template thumbnail gallery will be-->
                            <div id="dataDiv"><!--Populated with ajax--></div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button type="button" class="btn btn-primary">Save Selection</button>
                        </div>
                    </div>
                </div>
            </div>
                     
            <!--<input asp-for="Template" class="form-control" type="text" id="templateInput" name="template" disabled/>-->
            <!--TODO: Create Modal? image gallery popup with templates from the selected brand-->
        </div>
    </div>

    <div class="form-row">
        <div class="col">
            <label asp-for="ImageUri" class="formLabel"></label>
            <p><i>TODO: Account Logo</i></p>
            <!--TODO: Create Yes/No include account logo if there is one on file?-->
        </div>
        <div class="col">
            <label asp-for="DataFileUri" class="formLabel"></label>
            <div class="custom-file">
                <input type="file" class="custom-file-input" id="customFile">
                <label class="custom-file-label" for="customFile">Choose file</label>
            </div>
        </div>
    </div>

    <div class="form-row">
        <div class="col">
            <div class="form-group">
                <label asp-for="Information" class="formLabel"></label>
                <!--TODO: Insert sign request form information, include in help as well. CREATE jump? LINK TO HELP-->
                <textarea asp-for="Information" class="form-control" id="detailsTextarea" rows="3"></textarea>
            </div>
        </div>
    </div>

    <div class="form-row">
        <div class="col">
            <button class="btn btn-primary" type="submit">Submit Request</button>
        </div>
        <div class="col form-inline">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="proofCheck" />
                <label class="form-check-label" for="proofCheck">Proof Needed Before Print</label>
            </div>
        </div>
    </div>
    <!--TODO: Form refresh button-->
</form>

