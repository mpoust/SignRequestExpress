@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@model SignRequestExpress.Models.PostModels.SignRequestModel
@{
}

<!--TODO: Add Question Marks for user questions-->
<!--TODO: Add Labels for everything - that way it lines up better on mobile views-->


<form asp-controller="Sales" asp-action="SubmitRequest" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-row">
        <div class="col">
            <label asp-for="AccountName" class="requestLabel"></label>
            <select asp-for="AccountName" class="custom-select form-control">
                <option selected disabled>Select Account</option>
                <!--TODO: Add Iconic too create Addition button for a new account -->
                @if (ViewBag.AccountList != null)
                {
                    foreach (var item in ViewBag.AccountList)
                    {
                        <option>@item.ToString()</option>
                    }
                }
            </select>
        </div>
        <div class="col form-inline"> <!--Alignment is weird!-->
            <label asp-for="NeededDate" class="requestLabel"></label>
            <input type="text" asp-for="NeededDate" class="form-control"/>  <!--TODO: Configure a DatePicker-->
        </div>
        <div class="col form-inline">
            <label for="dateRequestedStatic" class="requestLabel">Date Requested:</label>
            <input type="text" readonly class="form-control-plaintext" id="dateRequestedStatic"
                   value="@DateTime.Now.ToShortDateString()" />
            <!-- TODO: Make the date not look weird on mobile view-->
        </div>        
    </div>

    <br />

    <div class="form-row">
        <div class="col">
            <label asp-for="Reason" class="requestLabel"></label>
            <input asp-for="Reason" type="text" class="form-control" placeholder="Reason" />
        </div> 
        <div class="col">
            <label asp-for="MediaString" class="requestLabel"></label>
            <select asp-for="MediaString" class="custom-select form-control">
                <!--TODO: Store on client device - would sqlite work?-->
                <option selected disabled>Media Type</option>
                <option>Adhesive</option>
                <!--TODO: Option appears if selected for Corr-Plast -- jQeury, Angular?-->
                <option>Photo Glossy</option>
                <option>Matte Outdoor</option>
                <option>Plasticore</option>
                <!--TODO: Option appears if selected for Lighted -- accomplished with jQuery? Angular-->
            </select>
        </div>
    </div>

    <br />

    <div class="form-row">
        <!--TODO: Figure out how to disable form elements based off other's selection-->
        <div class="col">
            <label asp-for="Quantity" class="requestLabel"></label>
            <input asp-for="Quantity" class="form-control" type="number" value="1" min="0" max="100" />
        </div>
        <div class="col-auto form-inline">
            <label asp-for="HeightInch" class="requestLabel"></label>
            <input asp-for="HeightInch" type="number" placeholder="Height" step="0.05" min="0.25" max="500" />
        </div>
        <div class="col-auto form-inline">
            <label asp-for="WidthInch" class="requestLabel"></label>
            <input asp-for="WidthInch" type="number" placeholder="Width" step="0.05" min="0.25" max="500" />
        </div>
        <div class="col form-inline">
            <!--TODO: orientation auto switch-->
            <label for="signOrientation" class="requestLabel">Orientation:</label>
            <!-- 
                <div class="col-auto form-inline">
                    <!--TODO: Auto populate checkbox, and switch values of heigh and width if opposite is selected
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="inlineRadioOptions" id="horizontalCheckbox" value="option1" />
                        <label class="form-check-label" for="horizontalCheckbox">Horizontal</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="inlineRadioOptions" id="verticalCheckbox" value="option2" />
                        <label class="form-check-label" for="verticalCheckbox">Vertical</label>
                    </div>
                </div> -->
        </div>
    </div>

    <br />

    <!--TODO: BELOW!-->
    <div class="form-row">
        <div class="col">
            <select class="custom-select form-control">
                <option selected disabled>Select Brand</option>
                @if (ViewBag.BrandList != null)
                {
                    foreach (var item in ViewBag.BrandList)
                    {
                        <option>@item.ToString()</option>
                    }
                }
            </select>
        </div>
        <div class="col">
            <p><i>TODO: Template</i></p>
            <!--TODO: Create Modal? image gallery popup with templates from the selected brand-->
        </div>
    </div>

    <br />

    <div class="form-row">
        <div class="col">
            <p><i>TODO: Account Logo</i></p>
            <!--TODO: Create Yes/No include account logo if there is one on file?-->
        </div>
        <div class="col">
            <div class="custom-file">
                <input type="file" class="custom-file-input" id="customFile">
                <label class="custom-file-label" for="customFile">Choose file</label>
            </div>
        </div>
    </div>

    <br />

    <div class="form-row">
        <div class="col">
            <div class="form-group">
                <label asp-for="Information" class="requestLabel"></label>
                <!--TODO: Insert sign request form information, include in help as well. CREATE jump? LINK TO HELP-->
                <textarea asp-for="Information" class="form-control" id="detailsTextarea" rows="3"></textarea>
            </div>
        </div>
    </div>

    <br />

    <div class="form-row">
        <div class="col">
            <button class="btn btn-primary" type="submit">Submit Request</button>
        </div>
        <div class="col form-inline">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="proofCheck" />
                <label class="form-check-label" for="proofCheck">Proof Needed Before Print</label>
            </div>
        </div>
    </div>
    <!--TODO: Form refresh button-->
</form>